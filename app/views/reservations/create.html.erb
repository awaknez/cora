<table class="table-bordered mt-4 mb-4">
  <thead>
  <tr>【お申し込み内容】</tr>
  </thead>
  <tr>
    <td class="bg-light">申し込み日時</td>
    <td >
    <%= "#{@date_parse}"+" "%><%= days[@reservation.date.wday]+" "%>
    <%= "#{@time}"%></td>
  </tr>
  <tr>
    <td class="bg-light">ご参加予定人数</td>
    <td><%= @reservation.number_of_people.name%></td>
  </tr>
  <tr>
    <td class="bg-light">面談形式</div>
    <td><%= @reservation.style.name%><td>
  </tr>
  <tr>
