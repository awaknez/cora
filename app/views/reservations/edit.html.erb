<!-- new.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>申込内容編集画面</h1>
    </div>
    <div class="col-12 mt-3 content">
      <div class="weight-bold-text">
        日時（変更できません）
      </div>
    
      <%= form_with model: @reservation, local: true, class: 'form' do |form| %>
      
      <%# <%= render 'layouts/error_messages', model: form.object %>
      <div class="day form-group">
        <%= form.label :date, '日付' %>
        <%= form.text_field :date, class: 'form-control', value: @reservation.date, readonly: true %>
      </div>
      <div class="time form-group">
        <%= form.label :time, '時間' %>
        <%= form.text_field :time, class: 'form-control',  value: @reservation.time, readonly: true %>
      </div>
      <%= form.text_field :start_time, value: @reservation.start_time,readonly: true %>
      <div class="form">
        <div class="weight-bold-text">
          ご参加予定人数
          <span class="indispensable">必須</span>
        </div>
        <%= form.collection_select(:number_of_people_id, NumberOfPeople.all, :id, :name, {}, {class:"select-box", id:"nuber_of_people-category"}) %><br />
        <div class="weight-bold-text">
          面談形式（お選びください）
          <span class="indispensable">必須</span>
        </div>
        <%= form.collection_select(:style_id, Style.all, :id, :name, {}, {class:"select-box", id:"style-category"}) %><br />
        <div class="weight-bold-text">
          面談で相談したいこと（変更できません）
        </div>
        <%= form.text_area :question, class:"input-question", id:"pre-question", placeholder:"面談にて相談したいことがございましたら事前にご記入ください。",rows:"7" ,maxlength:"1000",readonly: true %>

      <%# <%= form.hidden_field :user_id, value: current_user.id %>
      

      <div class="submit">
        <%= form.submit value: '変更する', class: 'btn btn-primary mx-auto d-block' %>
      </div>
    <% end %>
    <div class="col-12 text-right">
      <%= link_to '戻る', reservations_path(@reservation) %><!--詳細ページへ戻す-->
    </div>
    </div>
  </div>
</div>