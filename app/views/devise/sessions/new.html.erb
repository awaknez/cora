<div class="container">
  <div class="container-fruid">
    <%= form_with model:@user, url: user_session_path, id: 'registration-main', class:'registration-main', local: true do |f| %>
      <div class='form-wrap'>
        <div class='form-header'>
          <div class='form-header-text'>
          </div>
        </div>
        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <div class="login_regist">
          <p>ログイン</p>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label >メールアドレス</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label >パスワード</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"登録したパスワードを入力" %>
        </div>
        <div class='login-btn'>
          <%= f.submit "ログイン" ,class:"login-blue-btn " %>
        </div>
        <div class="actions_to_registration">
          <%= link_to "新規登録はこちら", new_registration_path(resource_name)%>
        </div>
      </div>      
    <% end %>
  </div>
</div>
