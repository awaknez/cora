<div class="container">
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <div class='form-wrap'>
        <div class='form-header mb-5'>
          <h1 class='form-header-text border-bottom mb-5'>
          </h1>
        </div>

      <%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div>
        <%= render "devise/shared/error_messages", model:f.object %>
        </div>
        <div class="login_regist">
          <p>会員情報入力</p>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label>お名前(全角)</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-name-wrap'>
            <%= f.text_field :name_last_name, class:"input-name", id:"last-name", placeholder:"例) 小暮" %>
            <%= f.text_field :name_first_name, class:"input-name", id:"first-name", placeholder:"例) 健太郎" %>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class>お名前カナ(全角)</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-name-wrap'>
            <%= f.text_field :name_last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) コグレ" %>
            <%= f.text_field :name_first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) ケンタロウ" %>
          </div>
          </div>
            <div class="form-group">
              <div class="form-text-wrap">
                  <label class>通っている教室名</label>
                  <span class="indispensable">必須</span>
              </div>
              <%= f.collection_select(:school_id, School.all, :id, :name, {}, {class:"select-box", id:"school-category"}) %>
          </div>
          <div class="form-group">
            <div class="form-text-wrap">
              <label class>学年</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"select-box", id:"grade-category"}) %>
          </div>
        <div class="form-group">
            <div class="form-text-wrap">
              <label class>クラス</label>
              <span class="indispensable">必須</span>
            </div>
            <div>
              <%= f.collection_select(:class_id, Homeroom.all, :id, :name, {}, {class:"select-box", id:"class-category"}) %>
            </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class>メールアドレス</label>
            <span class="indispensable ">必須</span>
          </div>
          <%= f.email_field :email, class:"select-box", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class>パスワード</label>
            <span class="indispensable  ">必須</span>
          </div>
          <p class='info-text text-danger'>※英字と数字の両方を含めて設定してください</p>
          <%= f.password_field :password, class:"select-box", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class>パスワード(確認)</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password_confirmation, class:"select-box", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>
        <%# <div class="form-group">
          <div class="form-text-wrap">
            <label class>ユーザー区分</label>
            <span class="indispensable  ">必須</span>
          </div>              
            <%= f.collection_select(:group_id, Group.all, :id, :name, {}, {class:"select-box", id:"group-category"}) %>
        <%# </div> %>
              <br />
        <div class="actions">
          <%= f.submit "登録する" ,class:"login-blue-btn" %><br />
        </div>
        <div class="actions_to_registration">
          <%= link_to "ログインはこちら", new_session_path(resource_name)%>
        </div>
      <% end %>
  </div>
</div>
