<div class="container bg-light pb-5">
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
   <div class="container bg-white pt-5">
      <div class='form-wrap'>
        <div class='form-header'>
          <h1 class='form-header-text border-bottom mt-3'>
            会員情報入力
          </h1>
        </div>

      <%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", model:f.object %>

        <div class="form-group">
          <div class='form-text-wrap h4'>
            お名前(全角)
            <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
          </div>
          <div class='input-name-wrap'>
            <%= f.text_field :name_last_name, class:"input-name", id:"last-name", placeholder:"例) 小暮" %>
            <%= f.text_field :name_first_name, class:"input-name", id:"first-name", placeholder:"例) 健太郎" %>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap h4'>
            お名前カナ(全角)
            <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
          </div>
          <div class='input-name-wrap'>
            <%= f.text_field :name_last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) コグレ" %>
            <%= f.text_field :name_first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) ケンタロウ" %>
          </div>
        </div>

            <div class="form">
              <div class="weight-bold-text pt-3 border-top h4">
                通っている教室名
                <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
              </div>
              <%= f.collection_select(:school_id, School.all, :id, :name, {}, {class:"form-control ", id:"school-category"}) %>
            <div class="form">
              <div class="weight-bold-text mt-3 h4">
                学年
                <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
              </div>
              <%= f.collection_select(:grade_id, Grade.all, :id, :name, {}, {class:"form-control", id:"grade-category"}) %>
        
              <div class="weight-bold-text mt-3 h4">
                クラス
                <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
              </div>
              <div>
                <%= f.collection_select(:class_id, Homeroom.all, :id, :name, {}, {class:"form-control", id:"class-category"}) %>
              </div>
          </div>
        <!---->

        <%#<div class="field">
          <%= f.label :email %><%#<br />
        <%#  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%#</div>%>

        <%#<div class="field">
          <%= f.label :password %>
          <%#<% if @minimum_password_length %>
          <%#<em>(<%= @minimum_password_length %> <%#characters minimum)</em>
          <%#<% end %><%#<br />
          <%#<%= f.password_field :password, autocomplete: "new-password" %>
        <%#</div>

        <div class="field">
          <%= f.label :password_confirmation %><%#<br />
          <%#<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <%#</div>%>


        <div class="form-group">
          <div class='form-text-wrap mt-3 h4'>
            メールアドレス
            <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
          </div>
          <%= f.email_field :email, class:"form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class="form-group">
          <div class='form-text-wrap mt-3 h4'>
            パスワード
            <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
          </div>
          <p class='info-text text-danger'>※英字と数字の両方を含めて設定してください</p>
          <%= f.password_field :password, class:"form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
        
        </div>
        <div class="form-group">
          <div class='form-text-wrap mt-3 h4'>
            パスワード(確認)
            <span class="indispensable  bg-warning text-dark border h6 rounded">必須</span>
          </div>
          <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>
              <div class="weight-bold-text border-top pt-3 h4">
                ユーザー区分
                <span class="indispensable bg-warning bg-opacity-50 text-dark border h6 rounded">必須</span>
              </div>
              <div>
                <%= f.collection_select(:group_id, Group.all, :id, :name, {}, {class:"form-control", id:"group-category"}) %>
              </div>
              <br />
          <div class="actions">
          <%= f.submit "登録する" ,class:"btn btn-primary mb-3" %><br />
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
